---
import { appendSiteSuffix } from "@config/siteconfig";
import DefaultLayout from "@layouts/DefaultLayout.astro";
---

<DefaultLayout
  title={appendSiteSuffix("404")}
  showHeader={true}
  showNavLinks={false}
  showThemeSwitch={true}
  showFooter={true}
>
  <main
    class='flex flex-col items-center justify-center mt-[37.5vh]'
  >
    <div class='h-fit mx-auto flex flex-col items-center justify-center'>
      <h1
        class='neon text-5xl my-4 tracking-tight leading-14 capitalize'
        aria-label={`404 Page Not Found`}
      >
        404 Page Not Found
      </h1>
      <p class='text-xl my-4 text-center'>
        This is not the page you're looking for.
      </p>

      <a
        href='/'
        class='text-lg font-firacode underline decoration-dashed underline-offset-8 link text-center'
      >
        Go back home
      </a>
    </div>
  </main>
</DefaultLayout>
